# Application Settings
USE_MOCK_DATA=true  # Set to 'false' to use real APIs

# Zoom API Configuration
ZOOM_BASE_URL=https://api.zoom.us
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Microsoft Graph API Configuration (Delegated Permissions)
GRAPH_BASE_URL=https://graph.microsoft.com/v1.0
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common  # Use 'common' for multi-tenant or your specific tenant ID
MICROSOFT_AUTHORITY=https://login.microsoftonline.com/common
MICROSOFT_REDIRECT_URI=http://localhost:5001/auth/callback

# Delegated Permissions (requires user consent):
# - User.Read
# - Calendars.Read
# - OnlineMeetings.Read
# - Chat.ReadWrite
# - ChatMessage.Send

# Azure App Registration Setup for Delegated Permissions:
# 1. Go to Azure Portal -> Azure Active Directory -> App registrations
# 2. Create a new registration or use existing one
# 3. Add Delegated permissions (NOT application permissions):
#    - User.Read
#    - Calendars.Read
#    - OnlineMeetings.Read
#    - Chat.ReadWrite
#    - ChatMessage.Send
# 4. Add redirect URI: http://localhost:5001/auth/callback (Web platform)
# 5. Create a client secret in "Certificates & secrets"
# 6. Copy the Client ID, Tenant ID, and Client Secret here
# Note: Users will consent to these permissions on first login

# LLM Configuration (optional - using mock for now)
LLM_API_KEY=your_llm_api_key

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here_change_in_production
FLASK_ENV=development

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
