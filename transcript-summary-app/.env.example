# Application Settings
USE_MOCK_DATA=true  # Set to 'false' to use real APIs

# Zoom API Configuration
ZOOM_BASE_URL=https://api.zoom.us
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Microsoft Graph API Configuration (Application Permissions)
GRAPH_BASE_URL=https://graph.microsoft.com/v1.0
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_tenant_id

# Azure App Registration Setup:
# 1. Go to Azure Portal -> Azure Active Directory -> App registrations
# 2. Create a new registration or use existing one
# 3. Add Application permissions (not delegated):
#    - Calendars.Read
#    - OnlineMeetings.Read.All
#    - Chat.Create
#    - ChatMessage.Send
#    - User.Read.All
# 4. Grant admin consent for these permissions
# 5. Create a client secret in "Certificates & secrets"
# 6. Copy the Client ID, Tenant ID, and Client Secret here

# LLM Configuration (optional - using mock for now)
LLM_API_KEY=your_llm_api_key

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development
